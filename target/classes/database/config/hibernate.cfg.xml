<hibernate-configuration>
    <session-factory>
        <!-- modelcatalogue connection -->
        <property name = "connection.driver_class">org.sqlite.JDBC</property>
        <property name = "connection.url">jdbc:sqlite:./src/main/resources/database/data/sqlite.db</property>

        <!-- sql dialect -->
        <property name = "dialect">org.hibernate.dialect.SQLiteDialect</property>

        <property name="hbm2ddl.auto">create</property>

        <!-- mappings -->
        <mapping class = "server.database.models.pojos.users.User"/>
        <mapping class = "server.database.models.pojos.users.professors.Professor"/>
        <mapping class = "server.database.models.pojos.users.students.Student"/>
        <mapping class = "server.database.models.pojos.abstractions.Department"/>
        <mapping class = "server.database.models.pojos.abstractions.Score"/>
        <mapping class = "server.database.models.pojos.abstractions.Course"/>
        <mapping class = "server.database.models.pojos.abstractions.Transcript"/>
        <mapping class = "server.database.models.pojos.academicrequests.AcademicRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.CertificateRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.DefenseRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.DormRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.DroppingOutRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.MinorRequest"/>
        <mapping class = "server.database.models.pojos.academicrequests.RecommendationRequest"/>
        <mapping class = "server.database.models.pojos.media.MediaFile"/>
        <mapping class = "server.database.models.pojos.media.Picture"/>
        <mapping class = "shareables.models.pojos.messaging.Message"/>
        <mapping class = "shareables.models.pojos.messaging.Conversation"/>
        <mapping class = "shareables.models.pojos.messaging.Messenger"/>
    </session-factory>
</hibernate-configuration>